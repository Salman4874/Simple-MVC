@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notifications" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Welcome to Students World</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Add" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;Add Student</a>
        </div>


    </div>
    <br /><br />
<table class="table table-bordered table-stripped" width="100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Course
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.id
                </td>
                <td>
                    @obj.firstName
                </td>
                <td>
                    @obj.lastName
                </td>
                <td>
                    @obj.email
                </td>
                <td>
                    @obj.course
                </td>
                <td>
                    <div class="w-75 btn-group" role="button">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-primary btn-danger mx-2"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>
